<html   xmlns="http://www.w3.org/1999/xhtml"
        xmlns:py="http://genshi.edgewall.org/"
        lang="en">
    <head>
        <title>Maths test</title>
    </head>
    <body>
        <h1>Here are some quick questions</h1>
        <form action="/questions" method="POST">
            <ul py:for="category in quizz">
                <li py:for="q in quizz[category]" py:choose="q.answer_form">
                    $q.question

                    <select py:when="'single_choice'">
                        <option py:for="i in q.answer_data">$i</option>
                    </select>

                    <input py:otherwise="" type="text"/>
                </li>
            </ul>
            <input type="submit" />
        </form>
    </body>
</html>
